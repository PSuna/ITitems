<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="orgnztManageDAO">

	<resultMap type="egovframework.let.org.service.OrgnztVO" id="OrgnztList">
		<result property="orgnztId" column="ORGNZT_ID" />
		<result property="orgnztNm" column="ORGNZT_NM" />
		<result property="orgnztUp" column="ORGNZT_UP" />
		<result property="lowCnt" column="LOW_CNT" />
	</resultMap>
	
	<sql id="search">
		<where>
		  	<choose>
		  		<when test="searchOrgnztId != null and searchOrgnztId != ''">
		  			AND A.ORGNZT_UP = #{searchOrgnztId}
		  		</when>
		  		<otherwise>
		  			AND A.ORGNZT_UP IS NULL
		  			 OR A.ORGNZT_UP = 'ITEYES'
		  		</otherwise>
		  	</choose>
		</where>
	</sql>
	
	<select id="GetMOrgnztList" parameterType="egovframework.let.org.service.OrgnztDefaultVO" resultType="egovframework.let.org.service.OrgnztManageVO">
		SELECT ORGNZT_ID,
			   ORGNZT_NM
		  FROM LETTNORGNZTINFO
		 WHERE ORGNZT_UP = #{searchUpperOrg}
		 ORDER BY ORGNZT_ORDER ASC
	</select>
	
	<select id="SelectOrgnztVOList" parameterType="egovframework.let.org.service.OrgnztManageVO" resultMap="OrgnztList">
			SELECT 
				A.ORGNZT_ID,
				A.ORGNZT_NM,
				A.ORGNZT_UP,
				COUNT(B.ORGNZT_ID) AS LOW_CNT
			  FROM
			  	LETTNORGNZTINFO A
   LEFT OUTER JOIN LETTNORGNZTINFO B
	       		ON A.ORGNZT_ID = B.ORGNZT_UP 
		  <include refid="search" />
		  GROUP BY
		  		A.ORGNZT_ID,
				A.ORGNZT_NM,
				A.ORGNZT_UP
		  ORDER BY
		  		A.ORGNZT_UP,
		  		A.ORGNZT_ORDER
	</select>

</mapper>